{
  "mcpServers": {
    "basic-memory": {
      "args": [
        "basic-memory",
        "mcp"
      ],
      "command": "uvx"
    },
    "context7": {
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "autoApprove": [
        "resolve-library-id",
        "get-library-docs"
      ],
      "command": "npx",
      "env": {
        "DEFAULT_MINIMUM_TOKENS": "5000"
      }
    },
    "fetch": {
      "args": [
        "mcp-server-fetch"
      ],
      "command": "uvx"
    },
    "vectorcode": {
      "args": [
        "--ls-on-start",
        "--number",
        "2"
      ],
      "command": "vectorcode-mcp-server"
    }
  },
  "nativeMCPServers": {
    "neovim": {
      "autoApprove": [
        "read_multiple_files",
        "read_file",
        "list_directory",
        "find_files"
      ],
      "custom_instructions": {
        "text": "Must do:\n- If there is any, always ignore gitignored files, directories, and .git folder\n- Ignore temporary directory i.e. tmp, temp\n- Ignore cache directory i.e. cache, compiled"
      },
      "disabled_tools": []
    }
  }
}
