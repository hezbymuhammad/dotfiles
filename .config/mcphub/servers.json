{
  "mcpServers": {
    "context7": {
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "command": "npx",
      "env": {
        "DEFAULT_MINIMUM_TOKENS": "5000"
      }
    },
    "basic-memory": {
      "args": [
        "basic-memory",
        "mcp"
      ],
      "command": "uvx"
    },
    "fetch": {
      "args": [
        "mcp-server-fetch"
      ],
      "command": "uvx"
    },
    "sequential-thinking": {
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "autoApprove": [
        "sequentialthinking"
      ],
      "command": "npx",
      "custom_instructions": {
        "text": "- Before start building sequencial steps, you must know user true intent\n- Think carefully to know user intent. This step is important\n- Verify to user about intent\n- Only after you truly know user intent, you can start building sequential steps\n- Add user intent as the final sequence"
      },
      "disabled": false
    }
  },
  "nativeMCPServers": {
    "neovim": {
      "autoApprove": [
        "execute_lua",
        "execute_command",
        "read_file",
        "move_item",
        "read_multiple_files",
        "delete_items",
        "find_files",
        "list_directory",
        "write_file",
        "edit_file"
      ]
    }
  }
}
